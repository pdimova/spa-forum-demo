<div class="container">
    {{#with result}}
    <div class="row">
        <div class="col s5">
            <h3>{{this.username}}</h3>
            <img class="valign-wrapper valign circle" src="//placehold.it/50x50/222">
        </div>
        <div class="col s7">
            <button class="btn btn-watching" data-action-type="watching">Watching</button>
            <button class="btn btn-watching" data-action-type="watched">Watched</button>
            <button class="btn btn-watching" data-action-type="want-to-watch">Want-to-watch</button>
            <div id="action-list">
                <ul class="collection with-header">
                    <li class="collection-header">
                        <h4>Recently added</h4>
                    </li>
                    {{#each userMaterials}}
                    <li class="collection-item">
                        <a href="#/materials/{{this.id}}">{{this.title}}</a>
                        <div class="secondary-content chip">{{this.category}}</div>
                    </li>
                    {{/each}}
                </ul>
            </div>
        </div>
    </div>
    {{/with}}
</div>